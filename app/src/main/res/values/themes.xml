<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MobileProject" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:statusBarColor">@color/light_blue</item>
    </style>

    <style name="ThemeOverlay.AppCompat.navTheme">
        <item name="colorPrimary">@color/white</item>
    </style>

    <style name="NavigationDrawerItemStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="NavigationBottomItemStyle">
        <item name="android:textSize">13.5sp</item>
        <item name="android:textColor">#000000</item>
    </style>



    <!-- Custom DatePicker style -->
    <style name="CustomDatePicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:colorAccent">@color/Blue</item> <!-- Accent color for the selected date -->
        <item name="android:textColorPrimary">@android:color/black</item> <!-- Black color for numbers -->
        <item name="android:textColorSecondary">@android:color/black</item> <!-- Black color for secondary text -->
        <item name="android:background">@android:color/white</item> <!-- Background color -->
        <item name="android:textColorHighlight">@android:color/white</item> <!-- White text on selected date -->
        <item name="android:colorControlActivated">@color/Blue</item> <!-- Blue color for selected date -->
    </style>

    <!-- Custom TimePicker style -->
    <style name="CustomTimePicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:colorAccent">@color/Blue</item> <!-- Accent color for the selected time -->
        <item name="android:textColorPrimary">@android:color/black</item> <!-- Black color for time -->
        <item name="android:textColorSecondary">@android:color/black</item> <!-- Black color for secondary text -->
        <item name="android:background">@android:color/white</item> <!-- Background color -->
        <item name="android:textColorHighlight">@android:color/white</item> <!-- White text on selected time -->
        <item name="android:colorControlActivated">@color/Blue</item> <!-- Blue color for selected time -->
    </style>


</resources>
