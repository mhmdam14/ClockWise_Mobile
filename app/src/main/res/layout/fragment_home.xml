<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingVertical="45dp"
    tools:context=".home.HomeFragment"
    android:background="@drawable/calendar_bg">


    <TextView
        android:id="@+id/updatedDate"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="16dp"
        android:padding="8dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="40sp"
        android:elevation="4dp"
        />

    <LinearLayout
        android:layout_marginBottom="50dp"
        android:layout_marginTop="10dp"
        android:id="@+id/date_selection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        >
        <TextView
            android:layout_marginEnd="5dp"
            android:id="@+id/sunDate"
            android:layout_width="45dp"
            android:background="@drawable/rounded_corner"
            android:layout_height="80dp"
            android:gravity="center"
            android:text=""
            android:textSize="14sp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/monDate"
            android:layout_width="45dp"
            android:background="@drawable/rounded_corner"
            android:layout_height="80dp"
            android:text=""
            android:textSize="14sp"
            android:textColor="@color/black"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/tueDate"
            android:layout_width="45dp"
            android:background="@drawable/rounded_corner"
            android:layout_height="80dp"
            android:layout_marginStart="5dp"
            android:textColor="@color/black"
            android:text=""
            android:textSize="14sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/wedDate"
            android:layout_width="48dp"
            android:background="@drawable/rounded_corner"
            android:layout_height="80dp"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginStart="5dp"
            android:padding="8dp" />

        <TextView
            android:id="@+id/thuDate"
            android:layout_width="45dp"
            android:background="@drawable/rounded_corner"
            android:layout_height="80dp"
            android:textColor="@color/black"
            android:text=""
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginStart="5dp" />

        <TextView
            android:id="@+id/friDate"
            android:layout_width="45dp"
            android:background="@drawable/rounded_corner"
            android:layout_height="80dp"
            android:gravity="center"
            android:text=""
            android:textSize="14sp"
            android:layout_marginStart="5dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/satDate"
            android:layout_width="45dp"
            android:layout_height="80dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/rounded_corner"
            android:gravity="center"
            android:text=""
            android:textColor="@color/black"
            android:textSize="14sp" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="33dp"
        android:clipToPadding="false"
        />


</LinearLayout>